<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Sbte.Fragments.ChooseStream">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_speed="0.4"
                    app:lottie_url="https://assets8.lottiefiles.com/packages/lf20_ebcdufdk.json" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="Choose semester and branch" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@drawable/spinnerui"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvcivil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/branchbg"
                    android:fontFamily="@font/aleo"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Civil Engineering"
                    android:textColor="@color/textcolor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvelectrical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/branchbg"
                    android:fontFamily="@font/aleo"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Electrical Engineering"
                    android:textColor="@color/textcolor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvelectronics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/branchbg"
                    android:fontFamily="@font/aleo"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Electronics Engineering"
                    android:textColor="@color/textcolor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvmechnical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/branchbg"
                    android:fontFamily="@font/aleo"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Mechnical Engineering"
                    android:textColor="@color/textcolor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvcomputer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/branchbg"
                    android:fontFamily="@font/aleo"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Computer Science Engineering"
                    android:textColor="@color/textcolor"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>