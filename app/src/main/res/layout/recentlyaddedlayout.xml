<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/catbg">

    <ImageView
        android:id="@+id/videoimg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/video" />

    <TextView
        android:id="@+id/videotitle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Item_Title"
        android:textColor="#333232"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/videoimg"
        app:layout_constraintStart_toStartOf="@+id/videoimg"
        app:layout_constraintTop_toBottomOf="@+id/videoimg" />

    <TextView
        android:id="@+id/videodesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="learn about electrical engineerig"
        android:textColor="#716E6E"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/videoimg"
        app:layout_constraintStart_toStartOf="@+id/videoimg"
        app:layout_constraintTop_toBottomOf="@+id/videotitle" />
</androidx.constraintlayout.widget.ConstraintLayout>